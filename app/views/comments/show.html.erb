<div class="comment box">
<% if @comment.user == @user %>
  <%= link_to "Edit Comment", edit_comment_path(@comment.fish_slug, @comment.category_slug, @comment.id) %>
  <%= link_to "Destroy Comment", comment_path(@comment.fish_slug, @comment.category_slug, @comment.id), data: { confirm: "Are you sure you wish to delete your comment ##{@comment.id}" }, method: :delete %>
<% end %>
<%= link_to @comment.fish_title, fish_path(@comment.fish_slug, @comment.category_slug) %><br>
<%= @comment.body %>
</div>