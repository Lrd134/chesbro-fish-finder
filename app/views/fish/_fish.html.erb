<%= @fish.title %><br>
<% if @user == @fish.user  %>
  <%= link_to "Edit #{@fish.title}", edit_fish_path(@fish.slug, @fish.category_slug) %><br>
  <%= link_to "Delete #{@fish.title}", fish_path(@fish.slug, @fish.category_slug), method: :delete, data: { confirm: "Are you sure?"} %><br>
<% end %>
<%= @fish.category.name.capitalize%><br>
<%= @fish.content %><br>
<%= @fish.fish_image.attached? ? image_tag(@fish.fish_image) : "No Image Provided" %>
<% if logged_in? %>
  <%= render partial: 'comments/form', locals: { user: @user, fish: @fish } %>
<% else %>
  <%= "Login to Comment" %>
<% end %>